# =============================================================================
# ALPHA PLATFORM - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Database (TimescaleDB)
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=alpha_platform
POSTGRES_USER=alpha
POSTGRES_PASSWORD=alpha_secure_2024

# Connection string (auto-constructed, but can override)
# DATABASE_URL=postgresql://alpha:password@localhost:5432/alpha_platform

# -----------------------------------------------------------------------------
# Kafka (Redpanda)
# -----------------------------------------------------------------------------
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=alpha-platform

# -----------------------------------------------------------------------------
# Local LLM Configuration
# -----------------------------------------------------------------------------
# Qwen-Next-80B (primary, deep analysis)
LLM_QWEN_BASE_URL=http://172.23.193.91:8080/v1
LLM_QWEN_MODEL=Qwen3-32B-Q6_K.gguf

# GPT-OSS-20B (secondary, fast filtering)
LLM_GPT_OSS_BASE_URL=http://172.23.193.91:8081/v1
LLM_GPT_OSS_MODEL=gpt-oss-20b

# Default backend: "qwen" or "gpt_oss"
LLM_DEFAULT_BACKEND=qwen

# -----------------------------------------------------------------------------
# News API Keys
# -----------------------------------------------------------------------------
FINNHUB_API_KEY=your_finnhub_key
NEWSAPI_API_KEY=your_newsapi_key
FINANCIAL_DATASETS_API_KEY=your_fd_key

# Reddit (optional)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# -----------------------------------------------------------------------------
# SEC EDGAR
# -----------------------------------------------------------------------------
SEC_USER_AGENT=YourCompany contact@youremail.com

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Universe size
UNIVERSE_SIZE=100

# Analysis settings
SCREENER_BATCH_SIZE=10
COMMITTEE_MAX_ROUNDS=3

# -----------------------------------------------------------------------------
# Streamlit Dashboard
# -----------------------------------------------------------------------------
STREAMLIT_PORT=8501
